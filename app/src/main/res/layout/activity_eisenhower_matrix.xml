<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_white">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Theme.iPoli.AppBarOverlay"
        app:elevation="0dp">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:popupTheme="@style/Theme.iPoli.PopupOverlay" />
    </android.support.design.widget.AppBarLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/actionBarSize"
        android:columnCount="3"
        android:rowCount="3">

        <android.support.v4.widget.Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_row="0"
            android:layout_rowWeight="1" />

        <TextView
            style="@style/TextAppearance.AppCompat.Subhead"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_column="1"
            android:layout_columnWeight="4"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:paddingTop="16dp"
            android:text="Urgent"
            android:textAlignment="center" />

        <TextView
            style="@style/TextAppearance.AppCompat.Subhead"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_column="2"
            android:layout_columnWeight="4"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:paddingTop="16dp"
            android:text="Not Urgent"
            android:textAlignment="center" />

        <io.ipoli.android.app.ui.VerticalTextView
            style="@style/TextAppearance.AppCompat.Subhead"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_row="1"
            android:layout_rowWeight="5"
            android:gravity="bottom"
            android:paddingTop="16dp"
            android:text="Important"
            android:textAlignment="center" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_column="1"
            android:layout_columnWeight="4"
            android:layout_marginBottom="0.5dp"
            android:layout_marginEnd="0.5dp"
            android:layout_row="1"
            android:layout_rowWeight="5"
            android:background="@color/md_green_500"
            android:orientation="vertical">

            <TextView
                style="@style/TextAppearance.AppCompat.Subhead"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Do it"
                android:textAlignment="center"
                android:textColor="@color/md_white" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/do_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_column="2"
            android:layout_columnWeight="4"
            android:layout_marginBottom="0.5dp"
            android:layout_marginStart="0.5dp"
            android:layout_row="1"
            android:layout_rowWeight="5"
            android:background="@color/md_blue_500"
            android:orientation="vertical">

            <TextView
                style="@style/TextAppearance.AppCompat.Subhead"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Accomplish"
                android:textAlignment="center"
                android:textColor="@color/md_white" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/decide_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp" />
        </LinearLayout>


        <io.ipoli.android.app.ui.VerticalTextView
            style="@style/TextAppearance.AppCompat.Subhead"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_row="2"
            android:layout_rowWeight="5"
            android:gravity="bottom"
            android:paddingTop="16dp"
            android:text="Not Important"
            android:textAlignment="center" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_column="1"
            android:layout_columnWeight="4"
            android:layout_marginEnd="0.5dp"
            android:layout_marginTop="0.5dp"
            android:layout_row="2"
            android:layout_rowWeight="4"
            android:background="@color/md_deep_orange_500"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Delegete"
                android:textAlignment="center"
                android:textColor="@color/md_white" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/delegate_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_column="2"
            android:layout_columnWeight="4"
            android:layout_marginStart="0.5dp"
            android:layout_marginTop="0.5dp"
            android:layout_row="2"
            android:layout_rowWeight="4"
            android:background="@color/md_red_500"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Delete"
                android:textAlignment="center"
                android:textColor="@color/md_white" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/delete_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp" />
        </LinearLayout>

    </GridLayout>
</android.support.design.widget.CoordinatorLayout>